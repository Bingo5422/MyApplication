<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="false">
        <shape>
            <solid android:color="@color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/text_green" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#AFC6C4" />
            <stroke
                android:width="2dp"
                android:color="@color/text_green" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>