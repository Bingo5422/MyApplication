<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.me.EditInfoActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info"
            android:textSize="20sp"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/ll_edit_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="3dp"
            android:orientation="horizontal"
            android:background="@color/light_yellow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Photo"
                android:gravity="left|center_vertical"/>

            <ImageView
                android:id="@+id/iv_edit_user_photo"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@mipmap/default_portrait"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="3dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/light_yellow">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Name"
                android:gravity="left|center_vertical"/>
            <TextView
                android:id="@+id/tv_edit_nickname"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="new user"
                android:gravity="center|center_vertical" />

        </LinearLayout>

<!--        <ImageView-->
<!--            android:id="@+id/iv_edit_test"-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="100dp"/>-->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>