<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.me.MeFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/text_green"
            android:text="login"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/user_photo"
            android:layout_marginTop="80dp"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:src="@mipmap/default_portrait"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="no user"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_edit_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="edit_info"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="view server star folder"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_synchro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="synchronize folders"
            android:layout_gravity="center"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>