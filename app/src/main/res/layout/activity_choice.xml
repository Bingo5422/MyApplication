<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.recognition.ChoiceActivity">

    <LinearLayout

        android:id="@+id/cho_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/cho_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_keyboard_arrow_left_24"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/deep_grey"
            android:layout_marginLeft="16dp"
            android:text="Preferences"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set your preferred identification tool"
        android:paddingLeft="30dp"
        android:textSize="20sp"
        android:textColor="#AF9B90"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioGroup
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:id="@+id/group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/bai"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baidu"
            android:textSize="20sp"
            android:textColor="@color/deep_grey"
            android:checked="true"/>
        <RadioButton
            android:layout_marginLeft="10dp"
            android:id="@+id/xun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/deep_grey"
            android:text="Xunfei"/>

    </RadioGroup>

    <TextView
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tips: Baidu provides better accuracy but Xunfei is faster, please choose according to your needs!"
        android:paddingLeft="30dp"
        android:textSize="12sp"
        android:textColor="@color/deep_grey" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set your photo"
        android:paddingLeft="30dp"
        android:textSize="20sp"
        android:textColor="#AF9B90"
        android:textStyle="bold"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <Button
            android:id="@+id/camera"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/camera_background"
            android:paddingTop="40dp"
            android:paddingLeft="15dp"
            android:text="Open Camera"
            android:textAllCaps="false"
            android:gravity="left"
            android:textSize="15sp" />

        <Button
            android:id="@+id/album"
            android:layout_margin="10dp"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:background="@drawable/recall_pics_bg"
            android:text="Open Album"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:paddingTop="40dp"/>

    </LinearLayout>


</LinearLayout>