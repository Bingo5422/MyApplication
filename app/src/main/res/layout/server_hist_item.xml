<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/server_photo"
        android:layout_width="150dp"
        android:layout_height="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="4dp"
        android:layout_marginLeft="10dp"
        tools:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:id="@+id/item_content_ll"
        app:layout_constraintTop_toTopOf="@+id/server_photo"
        app:layout_constraintLeft_toRightOf="@+id/server_photo"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_filename_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="filename" />

        <TextView
            android:id="@+id/item_enName_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="enName" />

        <TextView
            android:id="@+id/item_datetime_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="datetime" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_cb_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="item_content_ll"
        app:layout_constraintTop_toTopOf="item_content_ll">

        <CheckBox
            android:id="@+id/item_cb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>