    <LinearLayout
        android:id="@+id/server_ul_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/synchro_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_keyboard_arrow_left_24"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/deep_grey"
            android:text="Synchronization"/>
    </LinearLayout>

    <TextView
        android:id="@+id/synchro_notes"
        app:layout_constraintTop_toBottomOf="@+id/server_ul_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:textSize="10sp"
        android:text="NOTE: Please ensure you have a stable network
environment. Network changes will interrupt the following operations."
        />


    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/synchro_notes"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical"
        android:paddingTop="10sp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uploads"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btn_upload_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Upload favorites"
            android:layout_marginTop="10dp"
            android:textColor="@color/deep_grey"
            android:background="@drawable/btn_white_round"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_upload_unfamiliar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_white_round"
            android:layout_marginTop="1dp"
            android:textColor="@color/deep_grey"
            android:textAllCaps="false"
            android:text="Upload unfamiliar words"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Downloads"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btn_download_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:textColor="@color/deep_grey"
            android:background="@drawable/btn_white_round"
            android:text="Download favorites"/>

        <Button
            android:id="@+id/btn_download_unfamiliar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="@color/deep_grey"
            android:text="Download unfamiliar words"
            android:layout_marginTop="1dp"
            android:background="@drawable/btn_white_round"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:text=" Syncing favourites after an upload or download operation of unfamiliar words
is recommended."/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>