<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.me.ServerUploadActivity">

    <LinearLayout
        android:id="@+id/server_ul_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="Choose files to upload"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/server_ul_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="left"
        app:layout_constraintBottom_toBottomOf="parent">

        <CheckBox
            android:id="@+id/check_all_cb_upload"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Select All"
            android:gravity="center"/>


        <TextView
            android:id="@+id/server_upload"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Download"
            android:layout_marginLeft="50sp"
            android:gravity="center"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/check_rcy_upload"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/server_ul_title"
        app:layout_constraintBottom_toTopOf="@id/server_ul_toolbar"/>

</androidx.constraintlayout.widget.ConstraintLayout>