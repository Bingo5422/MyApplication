<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.me.ServerUploadActivity">

    <LinearLayout
        android:id="@+id/server_ul_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:text="Synchronization"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/server_ul_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uploads"
            android:textSize="20sp"
            android:textColor="@color/text_green"/>

        <Button
            android:id="@+id/btn_upload_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Upload all stars to the server"
            android:textColor="@color/deep_grey"
            android:background="@color/creamy_white"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_upload_unfamiliar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/creamy_white"
            android:textColor="@color/deep_grey"
            android:textAllCaps="false"
            android:text="Upload all unfamiliar words to the server"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Downloads"
            android:textColor="@color/text_green"
            android:textSize="20sp"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btn_download_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="@color/deep_grey"
            android:background="@color/creamy_white"
            android:text="Download Stars to local"/>

        <Button
            android:id="@+id/btn_download_unfamiliar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="@color/deep_grey"
            android:text="download unfamiliars to local"
            android:background="@color/creamy_white"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>